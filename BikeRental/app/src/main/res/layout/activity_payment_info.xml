<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".PaymentInfoActivity"
    android:weightSum="10">
    <!--#00FF80-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cancel"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent">
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.6"
                android:background="@drawable/checkmark" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent">
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"
            android:text="Payment Complete"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="Thank you, wishing you have a fun and safe trip"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:id="@+id/imageBikepm"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="6.3">

            <LinearLayout
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:gravity="end"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/motorcycle"
                    />
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></LinearLayout>

                <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/txtinfoPayment"
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="xe sirus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:gravity="end"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/calendaricon"
                    />
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/dayrental"
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="2019/07/10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:gravity="end"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/right"
                    />
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/dayreturn"
                    android:layout_weight="3.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="2019/07/15"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/makericon"/>
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:id="@+id/txtAddressss"
            android:textColor="#0066FF"
            android:gravity="center"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="[FPT Education HCM]"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView

            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="8dp"
            android:id="@+id/totalprice"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="30$"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5">


        <TextView
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Please wait for a few minutes, we will contact and deliver the bike to you"/>

        <pl.droidsonroids.gif.GifTextView
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@drawable/locationmarker"/>




    </LinearLayout>




</LinearLayout>