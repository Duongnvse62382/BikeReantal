    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <fragment
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:layout_marginBottom="60dp"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deliver the Bike ->"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/txtFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Nguyen Van Duong"/>
            <TextView
                android:id="@+id/txtPhoneNo"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0965693764"/>

            <TextView
                android:id="@+id/textAddress"
                android:textColor="#0066FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[141 -143 Hà Thị Khiêm, Phường Trung Mỹ Tây, Quận 12]"/>
        </LinearLayout>


    </LinearLayout>





    <!--<3>-->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Choose Time Rental:"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <LinearLayout
            android:weightSum="10"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:layout_weight="8.5"
                android:enabled="false"
                android:id="@+id/editDate"
                android:hint="Day Rental"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_weight="1.5"
                android:id="@+id/btnDateRental"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:weightSum="10"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:layout_weight="8.5"
                android:enabled="false"
                android:id="@+id/editDateReturn"
                android:hint="Day Return Bike"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_weight="1.5"
                android:id="@+id/btnDatereturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

    </LinearLayout>

    <!--<4>-->
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTotal"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingRight="80dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total 0 day"/>
            <TextView
                android:id="@+id/txtTotalPrice"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingLeft="30dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0$"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="3.5"
            android:background="#F0EEEE"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>
                <Button
                    android:layout_weight="2"
                    android:background="@drawable/button_3state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking"
                    android:textColor="#F8F6F7"
                    android:layout_gravity="center"
                    android:onClick="ClickToBook"/>

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>